EXCEPTIONS = [
    # FIXME hack for ATV (cross-band)
    {
        "callsign": "WW7ATS",
        "output": Decimal("1253.25"),
        "input": Decimal("434"),
        "comment": "ATV",
    },
    # TODO support reversed pairs?
    {
        "callsign": "N7IH",
        "output": Decimal("147.4875"),
        "input": Decimal("146.4875"),
        "comment": "REVERSED",
    },
    {
        "callsign": "NW7DR",
        "output": Decimal("147.4625"),
        "input": Decimal("146.4625"),
        "comment": "REVERSED",
    },
]


with urlopen("https://www.wwara.org/DataBaseExtract.zip") as RESPONSE:
    # ZipFile requires a file-like object that supports seek
    FILE_OBJ = BytesIO(RESPONSE.read())
    ZIPFILE = ZipFile(FILE_OBJ)

D = []
for NAME in ZIPFILE.namelist():
    if not NAME.endswith(".csv"):
        continue
    # pending = bool("-pending-" in name)
    with ZIPFILE.open(NAME, "r") as CSV:
        # Remove the DATA_SPEC_VERSION header line from the .csv
        CSV.readline()
        D.extend(DictReader(codecs.getreader("us-ascii")(CSV)))

for row in D:
    OUTPUT = Decimal(row["OUTPUT_FREQ"])
    INPUT = Decimal(row["INPUT_FREQ"])
    offset = INPUT - OUTPUT

    matched = False
    for exception in EXCEPTIONS:
        if OUTPUT == exception["output"] and INPUT == exception["input"] and exception["callsign"] == row["CALL"]:
            print((FORMAT + " %s") % (row["CALL"], OUTPUT, INPUT, offset, exception["comment"]))
            matched = True
            break

    for rule in RULES:
        if rule["low"] <= OUTPUT <= rule["high"]:
            if offset == rule["offset"]:
                print(FORMAT % (row["CALL"], OUTPUT, INPUT, offset))
                matched = True
            break
    if not matched:
        print((FORMAT + " ERROR!") % (row["CALL"], OUTPUT, INPUT, offset))
